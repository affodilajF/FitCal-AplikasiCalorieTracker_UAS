<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.menuUser.addMenu.addMenuCustom.AddCustomMenuActivity"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ungu4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white">

        <ImageView
            android:layout_gravity="left"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline2_close_24"/>

        <ImageView
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_download_done_24"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Custom Food"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:background="@color/ungu5"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </LinearLayout>


    <LinearLayout

        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="40dp"
        android:background="@color/ungu2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:paddingBottom="40dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="40dp"
            android:background="@drawable/cardstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:padding="13dp"
                    android:background="@drawable/buttonstyle"
                    android:id="@+id/txt_name"
                    android:textColor="@color/ungu4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your food name"
                    android:textSize="20dp"/>

<!--                <TextView-->
<!--                    android:textStyle="bold"-->
<!--                    android:gravity="right"-->
<!--                    android:id="@+id/txt_cal"-->
<!--                    android:textColor="@color/ungu7"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="138 cal"-->
<!--                    android:textSize="20dp"/>-->

            </LinearLayout>

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="1 serving equals to 100 gram"-->
<!--                android:textSize="12dp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:textColor="@color/oren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In one 100g serving, what are the carbohydrate, protein, and fat amounts in grams?"
                    android:textSize="12dp"/>


            </LinearLayout>


<!--            masukkin 3 -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:background="@drawable/cardstyle3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/input_carbs"
                        android:textSize="15dp"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:background="@drawable/cardstyle4"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="Carbs" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"

                    android:padding="5dp"
                    android:background="@drawable/cardstyle3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/input_protein"
                        android:textSize="15dp"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:background="@drawable/cardstyle4"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="Protein" />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:background="@drawable/cardstyle3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/input_fat"
                        android:textSize="15dp"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:background="@drawable/cardstyle4"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="Fat" />

                </LinearLayout>



            </LinearLayout>

<!--sini-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout

                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/calculated_cal_carbs"
                        android:textSize="12dp"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="0 cal" />

                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="+" />


                <LinearLayout

                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/calculated_cal_protein"
                        android:textSize="12dp"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="0 cal" />


                </LinearLayout>

                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="+" />

                <LinearLayout

                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/calculated_cal_fat"
                        android:textSize="12dp"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="0 cal" />

                </LinearLayout>



            </LinearLayout>

<!--            sini -->

            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/cardstyle5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/calculated_all_cal_1serving"
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 calories in 1 serving"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:background="@color/ungu4"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/ungu4"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </LinearLayout>



<!--            total -->

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of servings?"
                        android:textSize="14dp"/>

                    <EditText
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:background="@drawable/cardstyle4"
                        android:id="@+id/edit_text_servings_number"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:hint="0" />


                </LinearLayout>



                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total calorie (cal)"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/txt_total_cal_calculated"
                        android:textColor="#11DF19"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textStyle="bold"
                        android:textSize="34dp"/>

                </LinearLayout>

            </LinearLayout>

            <!--        <TextView-->

            <!--            android:layout_marginBottom="8dp"-->
            <!--            android:layout_marginTop="10dp"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="To wich meal?"-->
            <!--            android:textSize="13dp"/>-->


            <LinearLayout

                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/cardstyle4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/ungu1"
                    android:padding="10dp"
                    android:id="@+id/btn_spinner"
                    android:text="To which meal?"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    />



                <Spinner
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:minWidth="500dp"
                    android:minHeight="20dp"
                    android:id="@+id/spinner_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--        <TextView-->

            <!--            android:layout_marginBottom="8dp"-->
            <!--            android:layout_marginTop="10dp"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="Set date"-->
            <!--            android:textSize="13dp"/>-->

            <!--        <Button-->
            <!--            android:padding="10dp"-->
            <!--            android:id="@+id/btn_select_date"-->
            <!--            android:layout_marginTop="20dp"-->
            <!--            android:text="Select Date"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:background="@drawable/cardstyle"-->
            <!--            />-->

            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/cardstyle4"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="150dp"
                    android:padding="10dp"
                    android:id="@+id/btn_select_date"
                    android:text="Select Date"

                    android:textColor="@color/ungu1"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txt_date_placeholder"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Place Holder"
                    android:textSize="15dp"/>

            </LinearLayout>






        </LinearLayout>
    </LinearLayout>




</LinearLayout>