<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.menuAdmin.adminUpdateMenu.AdminUpdateMenuActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white">

        <ImageView
            android:layout_gravity="left"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline2_close_24"/>

        <ImageView
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_download_done_24"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Details"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:background="@color/ungu5"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </LinearLayout>


    <LinearLayout

        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="40dp"
        android:background="@color/ungu2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:paddingBottom="40dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="40dp"
            android:background="@drawable/cardstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:padding="13dp"
                    android:background="@drawable/buttonstyle"
                    android:id="@+id/txt_name"
                    android:textColor="@color/ungu4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="food name"
                    android:textSize="20dp"/>

                <!--                <TextView-->
                <!--                    android:textStyle="bold"-->
                <!--                    android:gravity="right"-->
                <!--                    android:id="@+id/txt_cal"-->
                <!--                    android:textColor="@color/ungu7"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="138 cal"-->
                <!--                    android:textSize="20dp"/>-->

            </LinearLayout>

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="1 serving equals to 100 gram"-->
            <!--                android:textSize="12dp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <!--                <TextView-->
                <!--                    android:textColor="@color/oren"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="In one 100g serving, what are the carbohydrate, protein, and fat amounts in grams?"-->
                <!--                    android:textSize="12dp"/>-->


            </LinearLayout>



<!--        penamaan data -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout


                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="12dp"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Carbs gr" />

                </LinearLayout>





                <LinearLayout


                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="12dp"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Protein gr" />


                </LinearLayout>



                <LinearLayout

                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="12dp"
                        android:inputType="numberDecimal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Fat gr" />

                </LinearLayout>



            </LinearLayout>



            <!--            masukkin 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:background="@drawable/cardstyle3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/input_carbs"
                        android:textSize="13dp"
                        android:inputType="number"
                        android:padding="10dp"
                        android:background="@drawable/cardstyle4"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="0" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"

                    android:padding="5dp"
                    android:background="@drawable/cardstyle3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/input_protein"
                        android:textSize="13dp"
                        android:inputType="number"
                        android:padding="10dp"
                        android:background="@drawable/cardstyle4"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="0" />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:background="@drawable/cardstyle3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/input_fat"
                        android:textSize="13dp"
                        android:inputType="number"
                        android:padding="10dp"
                        android:background="@drawable/cardstyle4"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="0" />

                </LinearLayout>



            </LinearLayout>

            <!--sini-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout

                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/calculated_cal_carbs"
                        android:textSize="12dp"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="0 cal" />

                </LinearLayout>


                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="+" />


                <LinearLayout

                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/calculated_cal_protein"
                        android:textSize="12dp"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="0 cal" />


                </LinearLayout>

                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="+" />

                <LinearLayout

                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/calculated_cal_fat"
                        android:textSize="12dp"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="0 cal" />

                </LinearLayout>



            </LinearLayout>

            <!--            sini -->

            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/cardstyle5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/calculated_all_cal_1serving"
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 calories"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textColor="@color/oren"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:id="@+id/btn_del"
                    android:layout_marginTop="100dp"
                    android:text="delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstyle4"/>

                <Button
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/btn_update"
                    android:layout_marginTop="100dp"
                    android:text="update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstyle3"/>

            </LinearLayout>




        </LinearLayout>




    </LinearLayout>
















</LinearLayout>